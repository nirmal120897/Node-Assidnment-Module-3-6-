{{>header}}
<div class="container mt-4">
  <div class="row mt-5">
    <div class="col-md-12">
      <a href="/addproduct" class="btn btn-primary">Add</a>
       <table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">name</th>
      <th scope="col">price</th>
      <th scope="col">description</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
     {{#each product}}
    <tr>
      
      <th scope="row">{{this._id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.price}}</td>
      <td>{{this.description}}</td>
      <td>
            <a href="/editid?eid={{this._id}}" class="btn btn-info">EDIT</a>
            <a href="/deleteid/{{this._id}}" class="btn btn-danger">DELETE</a>
        </td>
    </tr>
    {{/each}}
   
  </tbody>
</table>
    </div>
  </div>
</div>
{{>footer}}